.container
  %h2 Update #{current_user.first_name}'s Info
  .row
    .col.s12
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .row
          .input-field.col.s6
            = f.label :first_name, 'First Name'
            %br/
            = f.text_field :first_name, autofocus: true
          .input-field.col.s6
            = f.label :last_name, 'Last Name'
            %br/
            = f.text_field :last_name, autofocus: true
          .input-field.col.s6
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true
          .input-field.col.s2
            = f.label :area_code
            %br/
            = f.telephone_field :area_code
          .input-field.col.s2
            = f.label :first_digits
            %br/
            = f.telephone_field :first_digits
          .input-field.col.s2
            = f.label :last_digits
            %br/
            = f.telephone_field :last_digits

          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          .input-field.col.s12
            = f.label :password
            %i (leave blank if you don't want to change it)
            %br/
            = f.password_field :password, autocomplete: "off"
          .input-field.col.s12
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off"
          .actions.btn.waves-effect.waves-light.teal
            = f.submit "Update"

  %p
    Wanna Leave Us? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn waves-effect waves-light teal"}
  = link_to "Back", :back
