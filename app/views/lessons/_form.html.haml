= form_for [@course, @lesson] do |f|
  .div.input-field
    = f.label :lesson_no
    = f.number_field :lesson_no, value: @lesson_no

  .div.input-field
    = f.label :title
    = f.text_field :title

  .div
    = f.label :content
    = f.text_area :content, class: "tinymce", rows: 40, cols: 120


  .div.center
    .waves-effect.secondary-content.btn-large.center
      = f.submit
