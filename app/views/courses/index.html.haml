.container
  .row
    .col.s12
      .section
        %%br
          %h2.center.blue-grey-text.text-darken-3 Welcome to Mycademy.
          %h5.center.blue-grey-text.text-darken-3 Design and lead your own curriculum.
        %%br
      .section
        .row
          .col.s12.m3.center
            %i.large.material-icons.orange-text perm_identity
            %h5.orange-text Create Account
          .col.s12.m3.center
            %i.large.material-icons.orange-text note_add
            %h5.orange-text Design Lessons
          .col.s12.m3.center
            %i.large.material-icons.orange-text supervisor_account
            %h5.orange-text Invite Learners
          .col.s12.m3.center
            %i.large.material-icons.orange-text loyalty
            %h5.orange-text Encourage Others
        %%br
      .section.center
        - if !user_signed_in?
          = render 'join_mycademy'
        - else
          = render 'lead_course'
          = render 'join_course'
      .section
        = render 'courses'
